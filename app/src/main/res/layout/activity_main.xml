                                android:layout_height="wrap_content"
                                android:text="0"
                                android:padding="8dp"
                                android:textColor="#FF2222"
                                android:textSize="16sp"
                                android:layout_marginTop="90dp"
                                android:gravity="center"
                                android:layout_weight="0.33"
                                android:id="@+id/death"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/news"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="@android:color/black"
                        app:fontFamily="sans-serif-medium" />


                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_medium"
                    android:fillViewport="true"
                    android:scrollbars="vertical"
                    android:scrollingCache="true" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The app consist the top headlines of five different countries
. User can view the category of news he wants to read. The app displays the top headlines of these categories.
The app is developed by Mohit Kumar, and individual app developer and competitive coder.
For any queries and bugs feel free to reach out to him using the below links."
                    android:textSize="20sp"
                    android:textColor="@color/grey_1000"
                    android:padding="20dp"
                    android:background="@drawable/border"
                    android:id="@+id/supp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:id="@+id/icons"
                    android:padding="20dp"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tag="git"
                        android:clickable="true"
                        android:onClick="getLink"
                        android:src="@drawable/ic_github_logo"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:tag="linkedin"
                        android:clickable="true"
                        android:onClick="getLink"
                        android:src="@drawable/ic_linkedin"
                        />
                </LinearLayout>




            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

